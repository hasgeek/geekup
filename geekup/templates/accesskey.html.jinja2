{# Render a form asking for the access key #}
{% extends "layout.html" %}
{% from 'macros.html' import renderform %}
{% block title %}Access Key Required{% endblock %}

{% block header %}
  <h1>{{ self.title()|e }}</h1>
{% endblock %}

{% block pageheaders %}
  <style type="text/css">
    #container {
      padding-top: 0;
    }
    #container, footer {
      max-width: 100%;
      text-align: left;
    }
  </style>
{% endblock %}

{% block content %}
{{ renderform(keyform, 'keyform', request.base_url, 'Open') }}
{% endblock %}

{% block footer %}
  <p>
    This is a restricted page. Do not share this URL.
  </p>
{% endblock %}